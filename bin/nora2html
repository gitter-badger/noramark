require 'nora_mark'
require 'optparse'
require 'kconv'

auto_convert_encode = false
opt = OptionParser.new
opt.on('--kconv') {
  auto_convert_encode = true
}

args = opt.parse(ARGV)
input = ARGF.read
input = Kconv.toutf8(input) if auto_convert_encode

puts NoraMark::Document::parse(input).render_parameter(nonpaged: true).html[0]
