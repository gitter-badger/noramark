require 'nora_mark'
require 'optparse'
require 'kconv'

auto_convert_encode = false
opt = OptionParser.new
opt.on('--kconv') {
  auto_convert_encode = true
}

opt.parse(ARGV)

if !ARGV[0].nil? and File.exist? File.join(File.dirname(ARGV[0]), 'transformer.rb')
  transformer = File.open(File.join(
                          File.dirname(ARGV[0]),
                          File.basename(ARGV[0], '.txt') + '-transform.rb')).read
end

input = ARGF.read
input = Kconv.toutf8(input) if auto_convert_encode

doc =  NoraMark::Document::parse(input)

doc.add_transformer(text: transformer) unless transformer.nil?

puts doc.render_parameter(nonpaged: true).html[0]
